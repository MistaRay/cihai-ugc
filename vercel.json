{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/submit-post.js": {
      "maxDuration": 10
    },
    "api/submissions.js": {
      "maxDuration": 10
    },
    "api/submission.js": {
      "maxDuration": 10
    },
    "api/update-status.js": {
      "maxDuration": 10
    }
  }
}
